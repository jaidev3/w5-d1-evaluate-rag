# OpenAI API Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.1

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./data/vector_db
CHROMA_COLLECTION_NAME=medical_documents

# RAGAS Evaluation Configuration
RAGAS_FAITHFULNESS_THRESHOLD=0.90
RAGAS_ANSWER_RELEVANCY_THRESHOLD=0.85
RAGAS_CONTEXT_PRECISION_THRESHOLD=0.85
RAGAS_CONTEXT_RECALL_THRESHOLD=0.80

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false
APP_LOG_LEVEL=INFO

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# Document Processing Configuration
MAX_DOCUMENT_SIZE=50MB
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=100

# Retrieval Configuration
RETRIEVAL_TOP_K=5
RETRIEVAL_SCORE_THRESHOLD=0.7

# Security Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=3600

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FILE_PATH=./logs/medical-ai-assistant.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Data Storage Configuration
DATA_DIRECTORY=./data
UPLOAD_DIRECTORY=./data/uploads
EVALUATION_RESULTS_PATH=./data/evaluation/results.json
